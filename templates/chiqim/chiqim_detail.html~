    .filter-section { display: flex; gap: 1rem; margin-bottom: 1rem; flex-wrap: wrap; }
    .search-input, .filter-select { padding: 0.5rem; border: 1px solid #ced4da; border-radius: var(--radius-sm); font-size: 0.9rem; }
